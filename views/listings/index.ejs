 <% layout('layouts/boilerplate.ejs') %>        <!--body tum dedo baki sab hamara hai -->
<body>
    <%= success %>
    <h3>All Listings</h3>

    <div class="row row-cols-lg-3 row-cols-lg-2 row-cols-lg-1"> <!--minimun number of cols in a row-->
        <% for(let listing of allListings){ %>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="listing-card card">
                    <img src="<%=listing.image%>" class="card-img-top" alt="Listing Image" style="height: 20rem;">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%=listing.title%></b>
                            <br>
                            &#8377; <%=listing.price.toLocaleString("en-IN")%> / night
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
    
</body>